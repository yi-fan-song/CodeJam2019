{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "server/types/*"
      ]
    }
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "src",
    "dist"
  ]
}
